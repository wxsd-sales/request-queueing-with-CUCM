            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_logout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_logout_24" />
                <ImageView
                    android:id="@+id/iv_getMe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="230dp"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/ic_person" />

                <ImageView
                    android:id="@+id/iv_startCall"
                    android:layout_width="@dimen/icon_size_normal"
                    android:layout_height="@dimen/icon_size_normal"
                    android:background="@drawable/circle_filled_blue"
                    android:padding="16dp"
                    android:src="@drawable/ic_call_waiting"
                    android:layout_marginTop="655dp"
                    android:layout_marginStart="164dp"/>

                <TextView
                    android:id="@+id/iv_no_request_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No Requests Present."
                    android:layout_marginTop="-305dp"
                    android:textSize="@dimen/textMedium" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="You have received call back requests from:"
                    android:layout_marginTop="-490dp"
                    android:layout_marginStart="15dp"
                    android:textSize="@dimen/textMedium"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="368dp"
                    android:visibility="gone"
                    android:layout_height="170dp"
                    android:layout_marginTop="-470dp"
                    android:backgroundTint="@color/gray_40"
                    card_view:cardCornerRadius="10dp">


                    <TextView
                        android:id="@+id/info_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cookie Crisp"
                        android:layout_marginLeft="100dp"
                        android:textSize="@dimen/textLarge"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/info_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Description: problems with video"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/textMedium"
                        android:layout_marginTop="65dp"/>
                    <Button
                        android:id="@+id/iv_startCallReceived"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Call Back"
                        android:layout_marginTop="100dp"/>
                </androidx.cardview.widget.CardView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:useDefaultMargins="true"
                    android:layout_margin="16dp"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false"
                    android:columnCount="2"
                    android:layout_gravity="center_horizontal">
                    <!--Cell 1-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_ucLogin"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_blue"
                            android:padding="16dp"
                            android:src="@drawable/ic_login"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/uc_login"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                    <!--Cell 2-->

                    <!--Cell 3-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_feedback"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_deep_yellow"
                            android:padding="16dp"
                            android:src="@drawable/ic_feeback"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/feedback"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                    <!--Cell 4-->

                    <!--Cell 5-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_messaging"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_blue"
                            android:padding="16dp"
                            android:src="@drawable/ic_message"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/message"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                    <!--Cell 6-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/get_me"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                    <!--Cell 7-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_webhook"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_deep_yellow"
                            android:padding="16dp"
                            android:src="@drawable/ic_feeback"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/webhooks"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                    <!--Cell 8-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_setup"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_green"
                            android:padding="16dp"
                            android:src="@drawable/ic_camera_24"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/setup"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>

                    <!--Cell 9-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_extras"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:background="@drawable/circle_filled_red"
                            android:padding="16dp"
                            android:src="@drawable/ic_more"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_8dp"
                            android:text="@string/extras"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="@dimen/textMedium"
                            card_view:layout_constraintTop_toBottomOf="parent" />
                    </LinearLayout>
                </GridLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/progressLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:background="@color/alphaWhite"
                android:visibility="gone"
                android:clickable="true">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

<!--        </androidx.cardview.widget.CardView>-->



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
